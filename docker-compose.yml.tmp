services:
  vue-app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: vue3-webapp
    ports:
      - "8080:80"
    restart: unless-stopped
    environment:
      - NODE_ENV=production
    networks:
      - webapp-network
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.vue-app.rule=Host(`localhost`)"
      - "traefik.http.services.vue-app.loadbalancer.server.port=80"

networks:
  webapp-network:
    driver: bridge